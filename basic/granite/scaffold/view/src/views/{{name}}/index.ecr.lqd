<div class="row">
  <div class="col-sm-11">
    <h2>{{ display_name | pluralize }}</h2>
  </div>
  <div class="col-sm-1">
    <a class="btn btn-success btn-sm" href="/{{ name | pluralize }}/new">New</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        {% for field in visible_fields -%}
        <th>{{ field.name | capitalize }}</th>
        {% endfor -%}
        <th>Actions</th>
      </tr>
    <tbody>
    <%- {{ name | pluralize }}.each do |{{ name }}| %>
      <tr>
        {% for field in visible_fields -%}
        <td><%={{ name }}.{{ field.name }}{% if field.type == "reference" %}.id{% endif %} %></td>
        {% endfor -%}
        <td>
          <span>
            <%= link_to("read", "/{{ name | pluralize }}/#{ {{ name }}.id }", class: "btn btn-primary btn-sm") -%>
            <%= link_to("edit", "/{{ name | pluralize }}/#{ {{ name }}.id }/edit", class: "btn btn-success btn-sm") -%>
            <%= link_to("delete", "/{{ name | pluralize }}/#{ {{ name }}.id }?_csrf=#{csrf_token}", "data-method": "delete", "data-confirm": "Are you sure?", class: "btn btn-danger btn-sm") -%>
          </span>
        </td>
      </tr>
    <%- end %>
    </tbody>
  </table>
</div>
