class {{class_name}} < Granite::ORM::Base
  adapter {{database}}
  table_name {{table_name}}

{% for field in fields %}
  {% if field.type == "reference" %}
  belongs_to :{{field.name}}
  {% endif %}
{% endfor %}

  # id : Int64 primary key is created for you
{% for field in fields %}
  {% if field.type != "reference" %}
  {% if field.hidden == false %}
  field {{field.name}} : {{field.cr_type}}
  {% endif %}
  {% endif %}
{% endfor %}
end
