name: {{ name }}
version: 0.1.0

authors:
  - {{ author }} <{{ email }}>

crystal: {{ crystal_version }}

license: UNLICENSED

targets:
  {{ name }}:
    main: src/{{ name }}.cr

  amber:
    main: lib/amber/src/amber/cli.cr

dependencies:
  amber:
    github: amberframework/amber
    branch: master
    #version: {{ amber_version }}

  citrine-i18n:
    github: amberframework/citrine-i18n
    version: 0.2.0

  crecto:
    github: Crecto/crecto
    version: ~> 0.8.1

  quartz_mailer:
    github: amberframework/quartz-mailer
    version: ~> 0.5.1

  jasper_helpers:
    github: amberframework/jasper-helpers
    version: ~> 0.2.0

{% if database == "pg" %}
  pg:
    github: will/crystal-pg
    version: ~> 0.14.1
{% elsif database == "mysql" %}
  mysql:
    github: crystal-lang/crystal-mysql
    version: ~> 0.4.0
{% elsif database == "sqlite" %}
  sqlite3:
    github: crystal-lang/crystal-sqlite3
    version: ~> 0.9.0
{% endif %}

development_dependencies:
  garnet_spec:
    github: amberframework/garnet-spec
    version: ~> 0.1.1
